#include <LedControl.h>

LedControl lc = LedControl(11, 13, 10, 1); // Pin 11=DIN, Pin 13=CLK, Pin 10=CS

// Patterns for numbers 0-9
byte numbers[10][8] = {
  {0b00111100, 0b01000010, 0b10000101, 0b10001001, 0b10010001, 0b10100001, 0b01000010, 0b00111100}, // 0
  {0b00001000, 0b00011000, 0b00101000, 0b00001000, 0b00001000, 0b00001000, 0b00001000, 0b00111100}, // 1
  {0b00111100, 0b01000010, 0b10000001, 0b00000010, 0b00001100, 0b00010000, 0b00100000, 0b01111111}, // 2
  {0b00111100, 0b01000010, 0b00000001, 0b00001110, 0b00000001, 0b10000001, 0b01000010, 0b00111100}, // 3
  {0b00000100, 0b00001100, 0b00010100, 0b00100100, 0b01000100, 0b01111111, 0b00000100, 0b00000100}, // 4
  {0b01111111, 0b01000000, 0b01000000, 0b01111100, 0b00000010, 0b00000001, 0b10000001, 0b01111110}, // 5
  {0b00111100, 0b01000010, 0b10000000, 0b10111100, 0b11000010, 0b10000001, 0b01000010, 0b00111100}, // 6
  {0b01111111, 0b00000001, 0b00000010, 0b00000100, 0b00001000, 0b00010000, 0b00100000, 0b01000000}, // 7
  {0b00111100, 0b01000010, 0b10000001, 0b01000010, 0b00111100, 0b01000010, 0b10000001, 0b00111100}, // 8
  {0b00111100, 0b01000010, 0b10000001, 0b01000011, 0b00111101, 0b00000001, 0b01000010, 0b00111100}  // 9
};

void setup() {
  lc.shutdown(0, false);  // Wake up LED matrix
  lc.setIntensity(0, 8);  // Set brightness level (0-15)
  lc.clearDisplay(0);     // Clear the display
}

void loop() {
  for (int num = 0; num < 10; num++) {
    // Display the number pattern
    for (int row = 0; row < 8; row++) {
      lc.setRow(0, row, numbers[num][row]);
    }
    delay(1000); // Wait for 1 second before showing the next number
  }
}
